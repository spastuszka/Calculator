<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/etShowNumber"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/grey"
        android:gravity="right"
        android:inputType="textPersonName"
        android:paddingTop="10pt"
        android:paddingBottom="0pt"
        android:text="0"
        android:textColor="@color/whiteColor"
        android:textSize="40sp" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="1pt">

            <Button
                android:id="@+id/buAc"
                android:layout_width="70pt"
                android:layout_height="50pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="@color/buttonColor"
                android:onClick="buClean"
                android:text="AC"
                android:textSize="18sp" />

            <Button
                android:id="@+id/buPlusMinus"
                android:layout_width="70pt"
                android:layout_height="50pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="@color/buttonColor"
                android:text="+/-"
                android:textSize="18sp" />

            <Button
                android:id="@+id/buModulo"
                android:layout_width="70pt"
                android:layout_height="50pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="@color/buttonColor"
                android:onClick="buPercent"
                android:text="%"
                android:textSize="18sp" />

            <Button
                android:id="@+id/buDiv"
                android:layout_width="70pt"
                android:layout_height="50pt"
                android:layout_weight="1"
                android:background="@color/buOp"
                android:onClick="buOpEvent"
                android:text="/"
                android:textColor="@color/whiteColor"
                android:textSize="18sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="1pt">

            <Button
                android:id="@+id/bu7"
                android:layout_width="70pt"
                android:layout_height="70pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="@color/buttonColor"
                android:onClick="buNumberEvents"
                android:text="7"
                android:textSize="18sp" />

            <Button
                android:id="@+id/bu8"
                android:layout_width="70pt"
                android:layout_height="70pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="@color/buttonColor"
                android:onClick="buNumberEvents"
                android:text="8"
                android:textSize="18sp" />

            <Button
                android:id="@+id/bu9"
                android:layout_width="70pt"
                android:layout_height="70pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="@color/buttonColor"
                android:onClick="buNumberEvents"
                android:text="9"
                android:textSize="18sp" />

            <Button
                android:id="@+id/buMul"
                android:layout_width="70pt"
                android:layout_height="70pt"
                android:layout_weight="1"
                android:background="@color/buOp"
                android:onClick="buOpEvent"
                android:text="*"
                android:textColor="@color/whiteColor"
                android:textSize="18sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="1pt">

            <Button
                android:id="@+id/bu4"
                android:layout_width="70pt"
                android:layout_height="70pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="@color/buttonColor"
                android:onClick="buNumberEvents"
                android:text="4"
                android:textSize="18sp" />

            <Button
                android:id="@+id/bu5"
                android:layout_width="70pt"
                android:layout_height="70pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="@color/buttonColor"
                android:onClick="buNumberEvents"
                android:text="5"
                android:textSize="18sp" />

            <Button
                android:id="@+id/bu6"
                android:layout_width="70pt"
                android:layout_height="70pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="@color/buttonColor"
                android:onClick="buNumberEvents"
                android:text="6"
                android:textSize="18sp" />

            <Button
                android:id="@+id/buSub"
                android:layout_width="70pt"
                android:layout_height="70pt"
                android:layout_weight="1"
                android:background="@color/buOp"
                android:onClick="buOpEvent"
                android:text="-"
                android:textColor="@color/whiteColor"
                android:textSize="18sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="1pt">

            <Button
                android:id="@+id/bu1"
                android:layout_width="70pt"
                android:layout_height="70pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="@color/buttonColor"
                android:onClick="buNumberEvents"
                android:text="1"
                android:textSize="18sp" />

            <Button
                android:id="@+id/bu2"
                android:layout_width="70pt"
                android:layout_height="70pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="@color/buttonColor"
                android:onClick="buNumberEvents"
                android:text="2"
                android:textSize="18sp" />

            <Button
                android:id="@+id/bu3"
                android:layout_width="70pt"
                android:layout_height="70pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="@color/buttonColor"
                android:onClick="buNumberEvents"
                android:text="3"
                android:textSize="18sp" />

            <Button
                android:id="@+id/buSum"
                android:layout_width="70pt"
                android:layout_height="70pt"
                android:layout_weight="1"
                android:background="@color/buOp"
                android:onClick="buOpEvent"
                android:text="+"
                android:textColor="@color/whiteColor"
                android:textSize="18sp" />
        </TableRow>
    </TableLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bu0"
            android:layout_width="140pt"
            android:layout_height="70pt"
            android:layout_marginRight="1pt"
            android:layout_weight="1"
            android:background="@color/buttonColor"
            android:onClick="buNumberEvents"
            android:text="0"
            android:textSize="18sp" />

        <Button
            android:id="@+id/buDot"
            android:layout_width="70pt"
            android:layout_height="70pt"
            android:layout_marginRight="1pt"
            android:layout_weight="1"
            android:background="@color/buttonColor"
            android:onClick="buNumberEvents"
            android:text="."
            android:textSize="18sp" />

        <Button
            android:id="@+id/buEqual"
            android:layout_width="70pt"
            android:layout_height="70pt"
            android:layout_weight="1"
            android:background="@color/buOp"
            android:onClick="buEqualEvent"
            android:text="="
            android:textColor="@color/whiteColor"
            android:textSize="18sp" />
    </LinearLayout>

</LinearLayout>